{% extends 'base.html.twig' %}

{% block title %}Categorie
{% endblock %}

{% block body %}
	<h2>Category</h2>
	<br>
	<a class="btn btn-outline-primary btn-sm" href="{{ path('app_back_category_index') }}">Retour à la liste</a>
	<br>
	<table class="table">
		<tbody>
			<tr>
				<th>Id</th>
				<td>{{ category.id }}</td>
			</tr>
			<tr>
				<th>Nom</th>
				<td>{{ category.name }}</td>
			</tr>
			<tr>
				<th>Slug</th>
				<td>{{ category.slug }}</td>
			</tr>
			<tr>
				<th>Date de création</th>
				<td>{{ category.createdAt ? category.createdAt|date('Y-m-d') : '' }}</td>
			</tr>
		</tbody>
	</table>

	<div class="btn-group">
		
		<a class="btn btn-warning btn-sm" href="{{ path('app_back_category_edit', {'id': category.id}) }}">Modifier</a>

		{{ include('back/category/_delete_form.html.twig') }}
	</div>
{% endblock %}
